[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[alias]
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git --no-pager l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all -p
  st = status
  ci = commit
  co = checkout
  br = branch
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  tree = !git la --oneline
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = vim -f
  autocrlf = false
  safecrlf = true
[apply]
  whitespace = error trailing-space tab-in-indent cr-at-eol
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[branch]
  autosetuprebase = always
[push]
  default = current
